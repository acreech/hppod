<h1>Listing manuals</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Serial</th>
    <th>Edition</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @manuals.each do |manual| %>
  <tr>
    <td><%= link_to manual.company.name, company_path(manual.company_id) %></td>
    <td><%= manual.serial %></td>
    <td><%= manual.edition %></td>
    <td><%= manual.description %></td>
    <td><%= link_to 'Show', manual %></td>
    <td><%= link_to 'Edit', edit_manual_path(manual) %></td>
    <td><%= link_to 'Destroy', manual, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

